{
  "name": "vite-plugin-pilet",
  "version": "1.3.0",
  "description": "Adds support for pilet output in Vite",
  "keywords": [
    "vite",
    "pilet",
    "piral",
    "microfrontends",
    "plugin"
  ],
  "author": "smapiot",
  "homepage": "https://piral.io",
  "license": "MIT",
  "type": "module",
  "main": "lib/cjs/index.cjs",
  "module": "lib/esm/index.mjs",
  "typings": "src/index.ts",
  "engines": {
    "node": ">=16.0"
  },
  "exports": {
    ".": {
      "import": "./lib/esm/index.mjs",
      "require": "./lib/cjs/index.cjs",
      "types": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/smapiot"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smapiot/piral-cli-vite.git"
  },
  "bugs": {
    "url": "https://github.com/smapiot/piral-cli-vite/issues"
  },
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "test": "tsc --noEmit",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "esbuild 'src/index.ts' --sourcemap --bundle --packages=external --platform=node --format=cjs --out-extension:.js=.cjs --outdir=lib/cjs",
    "build:esm": "esbuild 'src/index.ts' --sourcemap --bundle --packages=external --platform=node --format=esm --out-extension:.js=.mjs --outdir=lib/esm"
  },
  "dependencies": {
    "@jridgewell/sourcemap-codec": "^1.4.15",
    "magic-string": "^0.30.5"
  },
  "devDependencies": {
    "piral-cli": "1.7.3",
    "vite": "^4"
  }
}
